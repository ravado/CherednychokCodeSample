<!DOCTYPE html>

@model MailApp.ViewModels.BaseViewModel
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Title</title>
    <link href="../../Content/normalize.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/jquery-ui-1.9.2.custom.css" rel="stylesheet" />
    <link href="../../Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/main.css" rel="stylesheet" type="text/css" />

    
    <script src="../../Scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @*<script src="~/Scripts/bootstrap-datepicker.min.js"></script>*@
</head>
<body>
    <section class="wrapper">
        <header>
                <div class="fixed-header">
                    <div class="navbar navbar-fixed-top">
                        <div class="navbar-inner">
                            <div class="container">
                                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                @Html.ActionLink("Mail Sender", "Index", new { controller = "Home"}, new { @class = "brand" })
                                <div class="nav-collapse collapse">
                                    <ul class="nav">
                                        <li>@Html.ActionLink("Home","Index","Home")</li>                                        
                                        @if (!Request.IsAuthenticated) {
                                            <li>@Html.ActionLink("Login","Login","User")</li>                                            
                                        }
                                        else {
                                            <li>@Html.ActionLink("Write Letter","SelectCustomers","Mail")</li>
                                            <li>@Html.ActionLink("Customers","Index","Customer")</li>
                                            <li>@Html.ActionLink("Logout","Logout","User")</li>                                            
                                        }
                                        
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        <section class="main clearfix">            
            <section class="content">
                @RenderBody()
            </section>        
        </section>

    </section>
    <footer>
        <section class="inner">
            <div class="pull-right copyright">
                <p>MailSender © 2013. All rights reserved.</p>
            </div>
        </section>
    </footer>
</body>
</html>
